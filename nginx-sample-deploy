apiVersion: apps/v1
kind: Deployment
metadata:
  name: frontend
spec:
  selector:
    matchLabels:
      app: studentapp-tomcat
      tier: frontend
      track: stable
  template:
    metadata:
      labels:
        app: studentapp-tomcat
        tier: frontend
        track: stable
    spec:
      containers:
      - name: nginx
        image: satish736/studentapp-frontend:3.0
        lifecycle:
          preStop:
            exec:
              command: ["/usr/sbin/nginx","-s","quit"]
